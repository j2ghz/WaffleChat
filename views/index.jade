extends layout

block content
    div(id="mainContainer")
        div(id="headerContainer")
            h1 WaffleThread
            h2 Welcome, !{username}!
            button(id="createThread") Create a thread
            a(href='/logout') Logout
            p(id="closeAllThreads") Close all threads
            p(id="collapseAllThreads") Collapse all threads
            p(id="uncollapseAllThreads") Uncollapse all threads
        div(id="threadsContainer")
            h1 List of threads         
            ul(id="threads")
    div(id="chatContainer")
