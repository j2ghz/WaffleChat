extends layout

block content
    div(id="mainContainer")
        div(id="headerContainer")
            h1 WaffleThread
            h2 Přihlášen jako !{username}
            ul(id="headerFunctions")
                li(id="createThread") Vytvořit thread
                li(id="closeAllThreads") Zavřít všechny thready
                li(id="collapseAllThreads") Schovat všechny thready
                li(id="uncollapseAllThreads") Ukázat všechny thready
                a(href='/logout')
                    li Odhlásit
        div(id="threadsContainer")
            h1 Seznam threadů    
            ul(id="threads")
    div(id="chatContainer")
